
<div class ="formPage">

	<h3>{{title}}</h3>

		<div class = "checkForm">
		<form method="POST" action="/item/">
		{{#each items}}

		<ul type = "none">

		{{#unless checked}}

		<li>
		<input type="checkbox" name="itemCheckbox" value="{{itemName}}" id="{{slug}}">
		{{quantity}} x {{itemName}}
		</li>

		{{/unless}}

		{{#if checked}}
		<li><del>{{quantity}} x {{itemName}}</del></li>
		{{/if}}

		<input type="hidden" name="slug" value="{{slug}}">

		</ul>

		{{/each}}
		</br>
		<input type="submit" value="Update List">
		</form>

	</div>

	</br>

	<div class="bottomSection">
		<form method="POST" action="">
		<input type="text" name="quantity" class="quantity"> x <input type="text" name="itemName"><input type="hidden" name="slug" value={{slug}}>
		</br>
		<input type="submit" value="Add to List">
		</form>

		</br>

		<a href="/">All Lists</a> | <a href="/list/create">Create a New List</a>
	</div>
</div>